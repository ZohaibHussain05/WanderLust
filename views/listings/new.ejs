<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-3">
            <br>
            <h3>Create a New Listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" id="title" required placeholder="Add a catchy title" class="form-control" type="text">
                    <div class="valid-feedback">Title looks good</div>
                    <div class="invalid-feedback">Please Enter valid Title</div>
                </div>
                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea name="listing[description]" id="desc" class="form-control" type="text" required></textarea>
                    <div class="invalid-feedback">Please Enter a small description</div>
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image Link</label>
                    <input name="listing[image]" id="img" placeholder="Enrter Image URL/Link" class="form-control" type="text">
                </div> 
                <div class="row">
                 
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="2500" id="price" class="form-control" type="number" required>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" id="country" class="form-control" placeholder="Pakistan" type="text" required>
                        <div class="invalid-feedback">Country Name should be valid</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" id="location" class="form-control" placeholder="Lahore, Pakistan" type="text" required>
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
                <button class="btn btn-dark add-btn mt-2">Add</button>
            </form>
        </div>
    </div>
</body>